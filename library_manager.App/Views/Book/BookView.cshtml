@model BookViewModel

@{
    ViewBag.Title = "View book";
    Layout = "_Layout";
}


<div class="book-details">
    <h2>@Model.BookName</h2>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Description:</strong> @Model.Descriptions</p>
    <p><strong>Category:</strong> @Model.Category</p>
</div>

<button type="submit" class="btn btn-secondary" asp-controller="BooksList" asp-action="BooksListView">Back</button>